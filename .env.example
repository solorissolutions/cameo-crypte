# Environment variables for Caméo Crypté

# Toggle FaceTec SDK integration. When false, the app uses a mock scanner.
NEXT_PUBLIC_FACE_TEC_ENABLED=false

# Lit Protocol API key. Used to encrypt/decrypt shards. Provide your own key.
NEXT_PUBLIC_LIT_API_KEY="YOUR_LIT_API_KEY"

# Supabase configuration (optional, used for waitlist/auth)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"

# Bundlr/Arweave settings
NEXT_PUBLIC_BUNDLR_NODE="https://node1.bundlr.network"
NEXT_PUBLIC_ARWEAVE_GATEWAY="https://arweave.net"